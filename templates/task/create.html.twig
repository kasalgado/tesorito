{% extends '/admin/base.html.twig' %}
{% block title %}{{ 'task.title'|trans }}{% endblock %}

{% block body %}
    <h4 class="pl-3">{{ 'task.new'|trans }}</h4>
    <hr>
    <form id="form-task-create" class="form-horizontal" action="{{ path('_task_create') }}" method="POST">
        {% form_theme form '/form/common-create.html.twig' %}
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input id="new_task" type="checkbox" name="new_appointment" value="1" />
                    <label for="next_task">{{ 'task.next'|trans }}</label>
                </div>
            </div>
            <input type="hidden" name="id" value="{{ id }}" />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" type="submit">{{ 'add'|trans }}</button>
                    <a href="{{ path('_admin_panel') }}" class="btn btn-warning">{{ 'cancel'|trans }}</a>
                </div>
            </div>
        {{ form_end(form) }}
    </form>
{% endblock %}

