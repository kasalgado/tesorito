{% block form_row %}
    {% apply spaceless %}
        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(form) }}</div>
            <div class="col-sm-6">
                {% if label == 'date' or label == 'date_hour' or label == 'weekly' %}
                    {{ form_widget(form) }}
                {% else %}
                    {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
                {% endif %}
            </div>
            <small class="col-sm-offset-2 text-danger">{{ form_errors(form) }}</small>
        </div>
    {% endapply %}
{% endblock form_row %}
