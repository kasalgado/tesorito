{% extends '/admin/base.html.twig' %}
{% block title %}{{ 'dish.title'|trans({}, 'admin') }}{% endblock %}

{% block body %}
    <h4 class="pl-3">{{ 'dish.new'|trans({}, 'admin') }}</h4>
    <hr>
    <form id="form-meal-create" class="form-horizontal" action="{{ path('_admin_dish_create') }}" method="POST">
        {% form_theme form '/form/dish-create.html.twig' %}
        {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="hidden" name="id" value="{{ id }}" />
                    <button class="btn btn-success" type="submit">{{ 'add'|trans({}, 'admin') }}</button>
                    <a href="{{ path('_admin_panel') }}" class="btn btn-warning">{{ 'finish'|trans({}, 'admin') }}</a>
                    <a href="{{ path('_dining_plan_create') }}" class="btn btn-warning">{{ 'dish.new'|trans({}, 'admin') }}</a>
                </div>
            </div>
        {{ form_end(form) }}
    </form>
{% endblock %}
