{% extends '/admin/base.html.twig' %}
{% block title %}{{ 'money.title'|trans({}, 'admin') }}{% endblock %}

{% block body %}
    <h4 class="pl-3">{{ 'money.new'|trans({}, 'admin') }}</h4>
    <hr>
    <form id="form-money-create" class="form-horizontal" action="{{ path('_admin_money_create') }}" method="POST">
        {% form_theme form '/form/money-create.html.twig' %}
        {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" type="submit">{{ 'add'|trans({}, 'admin') }}</button>
                    <a href="{{ path('_admin_panel') }}" class="btn btn-warning">{{ 'finish'|trans({}, 'admin') }}</a>
                </div>
            </div>
        {{ form_end(form) }}
    </form>
{% endblock %}
